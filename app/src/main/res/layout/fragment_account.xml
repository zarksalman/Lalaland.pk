<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical"
    tools:context="com.lalaland.ecommerce.views.fragments.homeFragments.AccountFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200dp"
            android:layout_gravity="top|center_horizontal"
            android:background="@color/colorBrandsFocus"
            android:padding="@dimen/_16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/iv_display_picture"
                android:layout_width="@dimen/_100dp"
                android:layout_height="@dimen/_100dp"
                app:cardCornerRadius="@dimen/_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:src="@drawable/placeholder_products" />
            </androidx.cardview.widget.CardView>

            <TextView

                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_display_picture"
                tools:text="@tools:sample/first_names" />

            <ImageView

                android:id="@+id/iv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/setting_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:padding="@dimen/_16dp">

            <TextView

                android:id="@+id/tv_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/my_orders"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView

                android:id="@+id/tv_view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8dp"
                android:layout_toStartOf="@+id/iv_view_all"
                android:text="@string/view_all"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <ImageView

                android:id="@+id/iv_view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_arrow" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/_16dp"
            android:background="@color/colorScreenBg" />

        
    </LinearLayout>
</layout>