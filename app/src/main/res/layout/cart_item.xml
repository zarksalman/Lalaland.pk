<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.lalaland.ecommerce.helpers.AppUtils" />

        <variable
            name="cartItem"
            type="com.lalaland.ecommerce.data.models.cart.CartItem" />

        <variable
            name="adapter"
            type="com.lalaland.ecommerce.adapters.CartItemsAdapter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <CheckBox

            android:id="@+id/cb_add_to_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView

            android:id="@+id/iv_product"
            android:layout_width="@dimen/_60dp"
            android:layout_height="@dimen/_70dp"
            android:layout_margin="@dimen/_4dp"
            android:scaleType="fitXY"
            android:src="@drawable/placeholder_products"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cb_add_to_list"
            app:layout_constraintTop_toTopOf="parent"
            app:setProductImage="@{cartItem.primaryImage}" />

        <LinearLayout

            android:id="@+id/info_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_product_current_price"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/iv_product"
            app:layout_constraintTop_toTopOf="parent">

            <TextView

                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{cartItem.productName}"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:text="@tools:sample/full_names" />

            <TextView

                android:id="@+id/tv_size_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="20"
                android:maxLines="1"
                android:text="@{cartItem.salePrice}"
                android:textColor="@android:color/black"
                tools:text="@tools:sample/lorem/random" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton

                    android:id="@+id/btn_add"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:onClick="@{(view)->adapter.changeNumberOfCount(view, cartItem, -1)}"
                    android:src="@drawable/sub_icon" />

                <TextView

                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@{AppUtils.toString(cartItem.itemQuantity)}"
                    tools:text="@tools:sample/us_zipcodes" />

                <ImageButton

                    android:id="@+id/btn_sun"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:onClick="@{(view)->adapter.changeNumberOfCount(view, cartItem, 1)}"
                    android:src="@drawable/add_icon" />


            </LinearLayout>
        </LinearLayout>


        <TextView

            android:id="@+id/tv_product_current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{cartItem.salePrice}"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/info_container"
            tools:text="@tools:sample/us_zipcodes" />


        <!--
                android:onClick="@{(view)->adapter.deleteItemFromCart(view, cartItem.cartId)}"
        -->

        <ImageView

            android:id="@+id/iv_delete_item"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/trash"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_product_current_price"
            app:layout_constraintTop_toBottomOf="@id/tv_product_current_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>